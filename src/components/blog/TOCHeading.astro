---
import type { TocItem } from "@/utils";

interface Props {
	heading: TocItem;
}

const {
	heading: { depth, slug, children, text },
} = Astro.props;
---

<li>
	<a
		aria-label={`Scroll to section: ${text}`}
		href={`#${slug}`}><span>#</span>{text}</a
	>
	{
		!!children.length && (
			<ul>
				{children.map((subheading) => (
					<Astro.self heading={subheading} />
				))}
			</ul>
		)
	}
</li>
